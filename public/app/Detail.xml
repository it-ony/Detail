<?xml version="1.0"?>
<app:DetailClass xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:data="sprd.data">

    <js:Injection cid="injection">
        <data:SprdApiDataSource cid="api"
                endPoint="http://api.spreadshirt.net/api" gateway="api/v1" />
    </js:Injection>

    <ui:ItemsView items="{shop.productTypes}">
        <js:Template name="item">
            <li>
                {$item.name}
            </li>
        </js:Template>
    </ui:ItemsView>

</app:DetailClass>